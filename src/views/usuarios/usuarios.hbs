<div class="d-flex" id="wrapper">
    {{> sidebar}}
    <div id="page-content-wrapper">
        {{> navbar}}
        <div class="container-fluid px-4 text-dracwhite">
            <div class="row">
                <div class="container pb-2">
                    <div class="row justify-content-end">
                        <div class="col-1 w-auto">
                        <a href="javascript:javascript:nuevaSucursalModal()" class="btn btn-sm btn-dracpurple font-weight-bold text-dracwhite">
                            <i class="fas fa-plus"></i> Nuevo Usuario 
                        </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card text-dark bg-dracblue mb-3">
              <div class="card-header bg-dracblue text-dracorange">
                <h5 class="text-center">{{title}}</h5>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table id="empleadosActivosTable" class="table table-striped table-bordered table-sm text-dracwhite" cellspacing="0" width="100%">
                      {{#if empleados}}
                          <thead>
                              <tr class="bg-dracpurpleDark">
                                  <th>No. Empleado</th>
                                  <th>Identidad</th>
                                  <th>Nombre Empleado</th>
                                  <th>Telefono</th>
                                  <th>Ciudad</th>
                                  <th>Area</th>
                                  <th>Acciones</th>
                              </tr>
                          </thead>
                          <tbody >
                            {{#each empleados}}
                            {{/each}}
                          </tbody>
                      {{/if}}
                  </table>
                </div>
              </div>
            </div>
        </div>
    </div>
</div>

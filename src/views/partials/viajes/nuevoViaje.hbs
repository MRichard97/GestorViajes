<div class="modal fade" id="nuevoViajeModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content bg-dracblueDark">
      <div class="modal-header bg-dracblue">
        <h1 class="modal-title  text-dracorange" id="staticBackdropLabel">Nuevo Viaje</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
        <form role="form" id="formNuevoViaje">
            <div class="modal-body bg-dracblue">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card bg-dracbluedark text-dracwhite">
                            <div class="card-header border-white bg-dracbluedark">
                                <h3>Datos del viaje</h3>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-control-label">Fecha:</label>
                                            <div class="input-group">
                                                <div class="input-group-text bg-dracbluedark border-0"><i class="fa-solid fa-calendar-days text-white"></i></div>
                                                <input type="date" class="bg-dracbluedark border-0 form-control border-bottom text-dracwhite" id="fecha" required autocomplete="off">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-control-label">Sucursal:</label>
                                            <div class="input-group">
                                                <div class="input-group-text bg-dracbluedark border-0"><i class="fa-solid fa-building text-white"></i></div>
                                                <select class="bg-dracbluedark border-0 form-control border-bottom text-dracwhite" placeholder="Seleccione..." id="sucursal" required>
                                                    <option value="-1" disabled selected>Seleccione...</option>
                                                    {{#if sucursales}}
                                                        {{#each sucursales}}
                                                            <option value="{{sucursalId}}">{{nombre}}</option>
                                                        {{/each}}
                                                    {{/if}}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-control-label">Colaborador:</label>
                                            <div class="input-group">
                                                <div class="input-group-text bg-dracbluedark border-0"><i class="fa-solid fa-users text-white"></i></div>
                                                <select class="bg-dracbluedark border-0 form-control border-bottom text-dracwhite" placeholder="Seleccione..." id="colaborador" required>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-control-label">Distancia:</label>
                                            <div class="input-group">
                                                <div class="input-group-text bg-dracbluedark border-0"><i class="fa-solid fa-map-location-dot text-white"></i></div>
                                                <input type="text" class="bg-dracbluedark border-0 form-control border-bottom text-dracwhite" id="distancia" required autocomplete="off" disabled>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-control-label">Transportista:</label>
                                            <div class="input-group">
                                                <div class="input-group-text bg-dracbluedark border-0"><i class="fa-solid fa-van-shuttle text-white"></i></div>
                                                <select class="bg-dracbluedark border-0 form-control border-bottom text-dracwhite" placeholder="Seleccione..." id="transportista" required>
                                                    <option value="-1" disabled selected>Seleccione...</option>
                                                    {{#if transportistas}}
                                                        {{#each transportistas}}
                                                            <option value="{{transportistaId}}">{{nombre}}</option>
                                                        {{/each}}
                                                    {{/if}}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-control-label">Tarifa:</label>
                                            <div class="input-group">
                                                <div class="input-group-text bg-dracbluedark border-0"><i class="fa-solid fa-money-bills text-white"></i></div>
                                                <input type="text" class="bg-dracbluedark border-0 form-control border-bottom text-dracwhite" id="tarifa" required autocomplete="off" disabled>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3 pt-2">
                                    <div class="col-md-6">
                                        <button type="button" onclick="agregarColaborador()" class="btn btn-sm btn-dracpurple btn-outline-dark text-dracwhite"><i class="fas fa-plus-circle text-green"> Agregar al viaje</i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row pt-2">
                    <div class="col-md-12">
                        <div class="card bg-dracbluedark text-dracwhite">
                            <div class="card-header border-white bg-dracbluedark">
                                <h3>Lista de viaje</h3>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <table class="table table-dark table-striped table-bordered table-sm text-dracwhite" id="viajeTable" cellspacing="0">
                                        <thead class="text-center">
                                            <tr>
                                                <th style="display: none;">id</th>
                                                <th>Colaborador</th>
                                                <th>Distancia</th>
                                                <th>Accion</th>
                                            </tr>
                                        </thead>
                                        <tbody class="list">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer bg-dracblue">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" aria-label="Close"><i
                        class="fas fa-times-circle"></i> Cancelar</button>
                <button type="submit" class="btn btn-success"><i class="fas fa-save"></i>
                    Guardar</button>
            </div>
        </form>
    </div>
  </div>
</div>
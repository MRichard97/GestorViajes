<body class="bg-dracdarkestblue">
    <section class="h-100 vh-100">
		<div class="container h-100 center-container">
			<div class="row justify-content-sm-center h-100">
				<div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
					<div class="text-center my-5">
						<img src="img/pin.png" alt="logo" width="100">
					</div>
					<div class="card shadow-lg border-color text-dracpurple">
						<div class="card-body p-5 bg-dracblue">
							<h1 class="fs-4 card-title fw-bold mb-4 text-center">Login</h1>
							<form method="POST" class="needs-validation" novalidate="" autocomplete="off">
								<div class="mb-3">
									<label class="mb-2 text-dracorange" for="email">Correo</label>
									<input id="email" type="email" class="form-control bg-dracblue border-0 border-bottom" name="email" required autofocus>
									<div class="invalid-feedback">
										Correo no valido
									</div>
								</div>

								<div class="mb-3">
									<div class="mb-2 w-100">
										<label class="text-dracorange" for="password">Contraseña</label>
									</div>
									<input id="password" type="password" class="form-control bg-dracblue border-0 border-bottom" name="password" required>
								    <div class="invalid-feedback">
								    	Contraseña no valida
							    	</div>
								</div>

								<div class="d-flex align-items-center">
									<div class="form-check">
										<input type="checkbox" name="remember" id="remember" class="form-check-input">
										<label for="remember" class="form-check-label">Recuerdame</label>
									</div>
									<button type="submit" class="btn btn-dracpurple text-dracwhite ms-auto">
										Ingresar
									</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</body>

<script src="/js/auth/login.js"></script>